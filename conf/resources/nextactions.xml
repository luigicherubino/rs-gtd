<NextActions>
	<ResourceList>
		<Resource> <Name>/nextactions</Name>
			<Type>WebService</Type>
			<OperationList>
				<Operation>
					<Name>Next Actions</Name>
					<Type>GET</Type>
					<CompositionList>
						<Composition>
							<Name>Next Action List</Name>
							<Class>next-action-list</Class>
							<TemplateVar>Content</TemplateVar>
							<Type>Query</Type>
							<QueryType>List</QueryType>
							<Table>NEXT_ACTION_LIST</Table>
							<JoinList>
								<Join>
									<Name>Project</Name>
									<Table>project_list</Table>
									<Key>project_id</Key>
									<On>project_id</On>
								</Join>	
							</JoinList>
							<ColumnList>
								<Column>
									<Value>Context</Value>
								</Column>
								<Column>
									<Class>rs-h1</Class>
									<Name>Action</Name>
									<Value>Description</Value>
									<Href>/nextactions/{id}</Href>
								</Column>
									<Column>
									<Name>Outcome</Name>
									<Value>OUTCOME</Value>
								</Column>
								<Column>
									<Value>NEXT_ACTION</Value>
								</Column>
								<Column>
									<Name>Project</Name>
									<Value>{Project:name}</Value>
									<EmptyValue>{}</EmptyValue>
									<HRef>/projects/{Project:uri}</HRef>
								</Column>
								<Column>
									<Type>Options</Type>
									<OptionList>
										<Option>
											<Uri>/nextactions/{id}</Uri>
											<Operation>DELETE</Operation>
											<UriValues>rs-test</UriValues>
										</Option>
										<Option>
											<Uri>/nextactions/{id}/project</Uri>
											<Operation>PUT</Operation>
										</Option>
									</OptionList>
								</Column>
							</ColumnList>
						</Composition>
					</CompositionList>
				</Operation>
				<Operation>
					<Name>Process</Name>
					<Aggregate>ProcessAction</Aggregate>
					<Command>ActionStuff</Command>
					<Type>POST</Type>
					<Redirect>/stuff</Redirect>
                    <View>stuff_list</View>
                    <FilterList>
                        <Filter>
                            <Field>stuff_id</Field>
                            <Value>{query:stuff-id}</Value>
                        </Filter>
                    </FilterList>
					<ControlList>
						<Control>
							<Name>stuff-id</Name>
							<Type>hidden</Type>
							<Value>{stuff_id}</Value>
						</Control>
						<Control>
							<Label>Description</Label>
							<Name>Description</Name>
							<Value>{Description}</Value>
							<Type>text</Type>
						</Control>
						<Control>
							<Label>Context</Label>
							<Name>context</Name>
							<Type>select</Type>
							<View>context_list</View>
							<Option>context</Option>
							<Value>{context}</Value>
							<FilterColumn>context</FilterColumn>
							<FilterValue>is not null</FilterValue>
						</Control>
						<Control>
							<Label>What's the successfull outcome?</Label>
							<Name>outcome</Name>
							<Type>text</Type>
						</Control>
						<Control>
							<Label>What is the Next Action?</Label>
							<Name>next-action</Name>
							<Type>text</Type>
						</Control>
						<Control>
							<Label>Time</Label>
							<Name>time</Name>
							<Type>text</Type>
						</Control>
						<Control>
							<Label>Energy</Label>
							<Name>energy</Name>
							<Type>text</Type>
						</Control>
						<Control>
							<Label>Priority</Label>
							<Name>priority</Name>
							<Type>text</Type>
						</Control>
						<Control>
							<Label>Comments</Label>
							<Name>comments</Name>
							<Value>{Comments}</Value>
							<Type>textarea</Type>
						</Control>
					</ControlList>
					<AutoMap>N</AutoMap>
					<MapControlList type="list">
						<MapControl name="stuff-id">StuffId</MapControl>
						<MapControl name="Description">Description</MapControl>
						<MapControl name="context">Context</MapControl>
						<MapControl name="outcome">Outcome</MapControl>
						<MapControl name="next-action">NextAction</MapControl>
						<MapControl name="time">Time</MapControl>
						<MapControl name="energy">Energy</MapControl>
						<MapControl name="priority">Priority</MapControl>
						<MapControl name="comments">Comments</MapControl>
					</MapControlList>
				</Operation>
			</OperationList>
		</Resource>
		<Resource> <Name>/nextactions/{id}</Name>
			<Aggregate>ProcessAction</Aggregate>
			<Type>WebService</Type>
			<OperationList>
				<Operation> <Name>Action Details</Name> <Type>GET</Type>
					<CompositionList>
						<Composition>
							<Name>Next Action Details</Name>
							<Class>action-details</Class>
							<Type>Query</Type>
							<QueryType>Form</QueryType>
							<Table>NEXT_ACTION_LIST</Table>
							<Filter>Id</Filter>
							<ColumnList>
								<Column>
									<Value>Description</Value>
									<Class>rs-title</Class>
								</Column>
								<Column>
									<Value>Context</Value>
								</Column>
								<Column>
									<Name>When</Name>
									<Value>When</Value>
								</Column>
								<Column>
									<Name>Next Action</Name>
									<Value>next_action</Value>
								</Column>
								<Column>
									<Name>Outcome</Name>
									<Value>Outcome</Value>
								</Column>
								<Column>
									<Name>Comments</Name>
									<Value>Comments</Value>
									<Type>MarkDown</Type>
								</Column>
								<Column>
									<Type>Options</Type>
									<OptionList>
										<Option>
											<Uri>/nextactions/{id}</Uri>
											<Operation>DELETE</Operation>
											<UriValues>rs-test</UriValues>
										</Option>
									</OptionList>
								</Column>
							</ColumnList>
						</Composition>
					</CompositionList>
				</Operation>
				<Operation> <Name>Done</Name> <Type>DELETE</Type>
					<Location>/nextactions</Location>
					<OverridePost>Y</OverridePost>
					<Command>DoAction</Command>
					<ControlList>
						<Control>
							<Name>date</Name>
							<Type>text</Type>
							<Value>{now}</Value>
							<Label>When was this done?</Label>
						</Control>
					</ControlList>
					<AutoMap>N</AutoMap>
					<MapControlList type="list">
						<MapControl name="{id}">ActionId</MapControl>
						<MapControl name="date">Date</MapControl>
					</MapControlList>
				</Operation>
			</OperationList>
		</Resource>
		<Resource> <Name>/nextactions/{id}/project</Name>
			<Aggregate>ProcessAction</Aggregate>
			<Type>WebService</Type>
			<OperationList>
				<Operation> <Name>AssignTaskToProject</Name> <Type>PUT</Type>
					<OverridePost>Y</OverridePost>
					<Redirect>/projects/{name}</Redirect>
					<Command>AssignTaskToProject</Command>
					<Table>NEXT_ACTION_LIST</Table>
					<FilterList>
						<Filter>
							<Field>id</Field> 
							<Value>{id}</Value> 
						</Filter>
					</FilterList>
					<ControlList>
						<Control>
							<Label>Project</Label>
							<Name>project-id</Name>
							<Type>select</Type>
							<View>project_list</View>
							<Option>name</Option>
							<Value>project_id</Value>
							<FilterColumn>name</FilterColumn>
							<!-- TODO: Filter on IS_ACTIVE -->
							<FilterValue>is not null</FilterValue>
						</Control>
					</ControlList>
					<MapControlList type="list">
						<MapControl name="{id}">ActionId</MapControl>
						<MapControl name="project-id">ProjectId</MapControl>
					</MapControlList>
				</Operation>
			</OperationList>
		</Resource>
	</ResourceList>
</NextActions>
