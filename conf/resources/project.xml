<Component>
	<ResourceList>
		<Resource> <Name>/projects</Name>
			<Aggregate>ProjectAggregate</Aggregate>
			<Type>WebService</Type>
			<OperationList>
				<Operation>
					<Name>List of Projects</Name>
					<Type>GET</Type>
					<CompositionList>
						<Composition>
							<Name>Project List</Name>
							<Type>Query</Type>
							<QueryType>Form</QueryType>
							<Class>project-list</Class>
							<PageSize>100</PageSize>
							<Table>project_list</Table>
							<Order>name</Order>
							<ColumnList>
								<Column>
								   	<Value>Name</Value>
									<HRef>/projects/{uri}</HRef>
							   	</Column>
								<Column>
									<Value>Purpose</Value> </Column>
							</ColumnList>
						</Composition>
						<Composition>
							<Name>Commands</Name>
							<Type>Command</Type>
							<OptionList>
								<Option>
									<Uri>/projects</Uri>
									<Operation>POST</Operation>
								</Option>
							</OptionList>
						</Composition>
					</CompositionList>
				</Operation>
				<Operation>
					<Name>Create Project</Name>
					<Type>POST</Type>
					<Redirect>/projects</Redirect>
					<Command>CreateProject</Command>
					<ControlList>
						<Control>
							<Name>name</Name>
							<Type>text</Type>
							<Label>Project Name</Label>
						</Control>
						<Control>
							<Label>Purpose (Define purpose, why is the project worth doing)</Label>
							<Name>purpose</Name>
							<Type>text</Type>
						</Control>
						<Control>
							<Label>Vision (Define success (goal) of the project)</Label>
							<Name>vision</Name>
							<Type>textarea</Type>
							<Rows>5</Rows>
							<Cols>60</Cols>
						</Control>
					</ControlList>
					<AutoMap>N</AutoMap>
					<MapControlList type="list">
						<MapControl name="name">Name</MapControl>
						<MapControl name="purpose">Purpose</MapControl>
						<MapControl name="vision">Vision</MapControl>
					</MapControlList>
				</Operation>
			</OperationList>
		</Resource>
		<Resource> <Name>/projects/{project-uri}</Name>
			<Aggregate>ProjectAggregate</Aggregate>
			<Type>WebService</Type>
			<Template>project.html</Template>
			<OperationList>
				<Operation> <Name>Projects Details</Name>
					<Type>GET</Type>
					<CompositionList>
						<Composition>
							<Name>Project Details</Name>
							<Type>Query</Type>
							<QueryType>Form</QueryType>
							<Class>project-details</Class>
							<PageSize>100</PageSize>
							<Table>project_list</Table>
							<Filter>uri</Filter>
							<Order>name</Order>
							<ColumnList>
								<Column>
									<Value>Name</Value>
									<Class>rs-title</Class>
							   	</Column>
								<Column> <Value>Purpose</Value> </Column>
								<Column> <Value>Vision</Value> <Type>markdown</Type> </Column>
								<Column>
									<Type>Options</Type>
									<OptionList>
										<Option>
											<Uri>/projects/{project-uri}</Uri>
											<Operation>PUT</Operation>
										</Option>
										<Option>
											<Uri>/projects/{project-uri}/outcome</Uri>
											<Redirect>/projects/{project-uri}</Redirect>
											<Operation>POST</Operation>
										</Option>
									</OptionList>
								</Column>						
							</ColumnList>
						</Composition>
						<Composition>
							<Name>ProjectOutcomes</Name>
							<Title>Outcomes</Title>
							<Type>Query</Type>
							<QueryType>Form</QueryType>
							<Class>project-outcome-list</Class>
							<PageSize>100</PageSize>
							<Table>project_outcomes</Table>
							<FilterList>
								<Filter>
									<Field>project_id</Field>
									<Value>{Project Details:project_id}</Value>
								</Filter>
							</FilterList>
							<Order>name</Order>
							<ColumnList>
								<Column>
									<Value>Name</Value>
									<HRef>/projects/{project-uri}/outcome/{outcome_id}</HRef>
							   	</Column>
								<Column>
									<Type>Options</Type>
									<OptionList>
										<Option>
											<Label>Remove</Label>
											<Uri>/projects/{project-uri}/outcome/{outcome_id}</Uri>
											<Operation>DELETE</Operation>
										</Option>
										<Option>
											<Label>Update</Label>
											<Uri>/projects/{project-uri}/outcome/{outcome_id}</Uri>
											<Operation>PUT</Operation>
										</Option>
									</OptionList>
								</Column>
							</ColumnList>
						</Composition>
						<Composition>
							<Title>Tasks</Title>
							<Name>ProjectTaskList</Name>
							<Type>Query</Type>
							<QueryType>Form</QueryType>
							<Class>project-task-list</Class>
							<PageSize>100</PageSize>
							<Table>next_action_list</Table>
							<FilterList>
								<Filter>
									<Field>project_id</Field>
									<Value>{Project Details:project_id}</Value>
								</Filter>
							</FilterList>
							<Order>when</Order>
							<ColumnList>
								<Column> <Value>Context</Value> </Column>
								<Column>
									<Value>Description</Value>
									<HRef>/nextactions/{id}</HRef>
							   	</Column>
								<Column> <Value>Outcome</Value> </Column>
								<Column>
									<Type>Options</Type>
									<OptionList>
										<Option>
											<Uri>/nextactions/{id}</Uri>
											<Operation>DELETE</Operation>
											<Redirect>/projects/{project-uri}</Redirect>
										</Option>
										<Option>
											<Label>Move to project</Label>
											<Uri>/nextactions/{id}/project</Uri>
											<Redirect>/projects/{project-uri}</Redirect>
											<Operation>PUT</Operation>
										</Option>
									</OptionList>
								</Column>
							</ColumnList>
						</Composition>
					</CompositionList>
				</Operation>
				<Operation> <Name>Update Project</Name>
					<Type>PUT</Type>
					<OverridePost>Y</OverridePost>
					<Redirect>/projects</Redirect>
					<Command>UpdateProject</Command>
					<Table>project_list</Table>
					<FilterList>
						<Filter>
							<Field>uri</Field> 
							<Value>{project-uri}</Value> 
						</Filter>
					</FilterList>
					<ControlList>
						<Control>
							<Name>name</Name>
							<Value>{name}</Value>
							<Type>text</Type>
							<Label>Project Name</Label>
						</Control>
						<Control>
							<Label>Purpose</Label>
							<Name>purpose</Name>
							<Value>{purpose}</Value>
							<Type>text</Type>
						</Control>
						<Control>
							<Label>Vision</Label>
							<Name>vision</Name>
							<Value>{vision}</Value>
							<Type>textarea</Type>
							<Rows>5</Rows>
							<Cols>60</Cols>
						</Control>
					</ControlList>
					<MapControlList type="list">
						<MapControl name="{project_id}">ProjectId</MapControl>
						<MapControl name="name">Name</MapControl>
						<MapControl name="purpose">Purpose</MapControl>
						<MapControl name="vision">Vision</MapControl>
					</MapControlList>
				</Operation>
				<Operation> <Name>Deactivate Project</Name>
					<Type>DELETE</Type>
					<Location>/projects</Location>
					<Command>DeactivateProject</Command>
					<ControlList>
						<Control>
							<Name>confirm</Name>
							<Type>hidden</Type>
							<Label>Are you sure?</Label>
						</Control>
					</ControlList>
					<AutoMap>N</AutoMap>
					<MapControlList type="list">
						<MapControl name="{name}">Name</MapControl>
						<MapControl name="confirm">{}</MapControl>
					</MapControlList>
				</Operation>
			</OperationList>
		</Resource>
		<Resource> <Name>/projects/{project-uri}/tasks</Name>
			<Aggregate>ProjectAggregate</Aggregate>
			<Type>WebService</Type>
			<OperationList>
				<Operation>
					<Name>ProjectTaskList</Name>
					<Type>GET</Type>
					<CompositionList>
						<Composition>
							<Name>Project</Name>
							<Type>Query</Type>
							<Table>project_list</Table>
							<FilterList>
								<Filter>
									<Field>uri</Field>
									<Value>{project-uri}</Value>
								</Filter>
							</FilterList>
							<NoColumns>Y</NoColumns>
						</Composition>
					</CompositionList>
				</Operation>
			</OperationList>
		</Resource>
		<Resource> <Name>/projects/{project-uri}/outcome</Name>
			<Aggregate>ProjectAggregate</Aggregate>
			<Type>WebService</Type>
			<OperationList>
				<Operation> <Name>CreateProjectOutcome</Name>
					<Type>POST</Type>
					<Redirect>/projects/{project-uri}</Redirect>
					<Command>CreateProjectOutcome</Command>
					<Table>project_list</Table>
					<FilterList>
						<Filter>
							<Field>uri</Field> 
							<Value>{project-uri}</Value> 
						</Filter>
					</FilterList>
					<ControlList>
						<Control>
							<Name>name</Name>
							<Type>text</Type>
							<Label>Outcome</Label>
						</Control>
						<Control>
							<Label>Comments</Label>
							<Name>comments</Name>
							<Type>textarea</Type>
						</Control>
					</ControlList>
					<MapControlList type="list">
						<MapControl name="{project_id}">ProjectId</MapControl>
						<MapControl name="name">Name</MapControl>
						<MapControl name="{string:New}">Status</MapControl>
						<MapControl name="comments">Comments</MapControl>
					</MapControlList>
				</Operation>
			</OperationList>
		</Resource>
		<Resource> <Name>/projects/{project-uri}/outcome/{id}</Name>
			<Aggregate>ProjectAggregate</Aggregate>
			<Type>WebService</Type>
			<OperationList>
				<Operation>
					<Name>ProjectOutcome</Name>
					<Type>GET</Type>
					<CompositionList>
						<Composition>
							<Name>Outcome Details</Name>
							<Type>Query</Type>
							<QueryType>Form</QueryType>
							<Class>outcome-details</Class>
							<PageSize>100</PageSize>
							<Table>project_outcomes</Table>
							<Filter>outcome_id</Filter>
							<ColumnList>
								<Column>
									<Value>Outcome: {Name}</Value>
									<Class>rs-title</Class>
							   	</Column>
								<Column> <Value>Comments</Value> <Type>markdown</Type> </Column>
								<Column>
									<Type>Options</Type>
									<OptionList>
										<Option>
											<Uri>/projects/{project-uri}/outcome/{id}</Uri>
											<Operation>PUT</Operation>
										</Option>
										<Option>
											<Uri>/projects/{project-uri}/outcome/{id}</Uri>
											<Operation>DELETE</Operation>
										</Option>
									</OptionList>
								</Column>						
							</ColumnList>
						</Composition>
					</CompositionList>
				</Operation>
				<Operation> <Name>UpdateProjectOutcome</Name>
					<Type>PUT</Type>
					<Redirect>/projects/{project-uri}</Redirect>
					<Command>UpdateProjectOutcome</Command>
					<Table>project_outcomes</Table>
					<FilterList>
						<Filter>
							<Field>outcome_id</Field> 
							<Value>{id}</Value> 
						</Filter>
					</FilterList>
					<ControlList>
						<Control>
							<Name>name</Name>
							<Value>{name}</Value>
							<Type>text</Type>
							<Label>Outcome</Label>
						</Control>
						<Control>
							<Label>Comments</Label>
							<Name>comments</Name>
							<Value>{comments}</Value>
							<Type>textarea</Type>
						</Control>
					</ControlList>
					<MapControlList type="list">
						<MapControl name="{outcome_id}">OutcomeId</MapControl>
						<MapControl name="{project_id}">ProjectId</MapControl>
						<MapControl name="name">Name</MapControl>
						<MapControl name="comments">Comments</MapControl>
					</MapControlList>
				</Operation>
			</OperationList>
			<OperationList>
				<Operation> <Name>DeactivateProjectOutcome</Name>
					<Type>DELETE</Type>
					<Redirect>/projects/{project-uri}</Redirect>
					<Command>DeactivateProjectOutcome</Command>
					<Table>project_outcomes</Table>
					<FilterList>
						<Filter>
							<Field>outcome_id</Field> 
							<Value>{id}</Value> 
						</Filter>
					</FilterList>
					<ControlList>
						<Control>
							<Label>Reason</Label>
							<Name>reason</Name>
							<Type>text</Type>
						</Control>
					</ControlList>
					<MapControlList type="list">
						<MapControl name="{outcome_id}">OutcomeId</MapControl>
						<MapControl name="{project_id}">ProjectId</MapControl>
						<MapControl name="reason">Reason</MapControl>
					</MapControlList>
				</Operation>
			</OperationList>
		</Resource>
	</ResourceList>
</Component>
